{
  "name": "Disculla",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "frontend:dev": "pnpm --filter frontend dev",
    "frontend:build": "pnpm --filter frontend build",
    "frontend:start": "pnpm --filter frontend start",
    "frontend:lint": "pnpm --filter frontend lint",
    "backend:dev": "pnpm --filter backend start:dev",
    "backend:build": "pnpm --filter backend build",
    "backend:start": "pnpm --filter backend start:prod",
    "backend:lint": "pnpm --filter backend lint",
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "build": "pnpm --filter \"./apps/*\" build",
    "lint": "pnpm --filter \"./apps/*\" lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "keywords": [],
  "author": "kmjak",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.4.2"
  },
  "lint-staged": {
    "apps/frontend/**/*.{ts,tsx,js,jsx}": [
      "cd apps/frontend && eslint --fix",
      "prettier --write"
    ],
    "apps/backend/**/*.{ts,tsx,js,jsx}": [
      "cd apps/backend && eslint --fix",
      "prettier --write"
    ]
  }
}
